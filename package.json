  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.3",
    "express-async-handler": "^1.1.4",
    "http-errors": "^1.7.2",
    "jsonwebtoken": "^8.5.1",
    "mdbreact": "^5.2.0",
    "mongoose": "^5.12.10",
    "morgan": "^1.10.0",
    "react-paypal-button-v2": "^2.6.3",
    "swagger-jsdoc": "^6.1.0",
